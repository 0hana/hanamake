hanamake -s hanamade
result=${?}

if ! test ${result} -eq 2
then exit 1
fi

hanamake -s ./hanamade
result=${?}

if ! test ${result} -eq 2
then exit 1
fi

hanamake -s "$(pwd)/hanamade"
result=${?}

if ! test ${result} -eq 2
then exit 1
fi
